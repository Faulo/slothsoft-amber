<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="http://schema.slothsoft.net/farah/module">
	<assets>
		<resource-directory name="data" path="data" type="application/x-php"/>
		<resource-directory name="css" path="stylesheet" type="text/css"/>
		<resource-directory name="js" path="script" type="application/javascript"/>
		<resource-directory name="xsl" path="template" type="application/xslt+xml"/>
		<resource-directory name="dictionary" path="dictionary" type="application/xml"/>
		<resource-directory name="pages" path="pages" type="application/xml"/>
	
	<fragment name="description">
		<include-fragment ref="//slothsoft/default" />
		<fragment name="content">
			<use-template ref="xsl/description" />
			<use-document ref="//farah/sites"/>
			<include-fragment ref="default" />
		</fragment>
		<use-document ref="chat" />
	</fragment>
	
	<fragment name="mod.editor">
		<include-fragment ref="//slothsoft/default" />
		<fragment name="content">
			<use-document ref="data/mod.editor" />
			<use-template ref="xsl/editor" />
			<include-fragment ref="default" />
			<include-fragment ref="SavegameEditor" />
			<use-document ref="data/mod.resource-document" as="amberdata">
				<param name="id" value="libs" />
			</use-document>
		</fragment>
	</fragment>

	<fragment name="mod.resource">
		<struc name="/slothsoft/default" />
		<fragment name="content">
			<data name="mod.resource-document" as="list" />
			<data name="mod.resource-document" as="amberdata">
				<param name="id" value="libs" />
			</data>
			<template name="editor.data-list" />
			<struc name="default" />
			<struc name="SavegameEditor" />
			<struc name="/lib/pixijs" />
			<script name="MapViewer" />
			<struc name="/lib/babylonjs" />
			<script name="DungeonViewer" />
		</fragment>
	</fragment>

	<fragment name="chat">
		<param name="chat-database" value="amber" />
		<use-template ref="//chat/xsl/shoutbox" />
		<use-document ref="//chat/default" as="chat" />
	</fragment>
	
	
	
	
	
