<?xml version="1.0"?>
<module xmlns="http://schema.slothsoft.net/farah/module" xmlns:sfm="http://schema.slothsoft.net/farah/module">
  <!--
Farah Module Manifest

Module: amber
Vendor: slothsoft
Farah ID: farah://slothsoft@amber
Composer ID: slothsoft/amber

Homepage: http://farah.slothsoft.net/modules/amber
Packagist: https://packagist.org/packages/slothsoft/amber
GitHub: https://github.com/Faulo/slothsoft-amber

Llo
-->
  <default-configuration/>
  <assets>
  	<container name="editor">
		<custom-asset name="main" class="Slothsoft\Amber\Assets\EditorAsset"/>
		<container name="resources">
		  	<custom-asset name="styles" class="Slothsoft\Amber\Assets\Stylesheet"/>
		  	<custom-asset name="libs" class="Slothsoft\Amber\Assets\Library"/>
		  	<custom-asset name="raw" class="Slothsoft\Amber\Assets\Raw"/>
		  	<custom-asset name="gfx" class="Slothsoft\Amber\Assets\Gfx"/>
	  	</container>
  	</container>
  	
  	<directory name="games">
	  	<directory name="ambermoon">
	  		<resource name="structure.savegame" type="application/xml"/>
	  		<resource name="structure" type="application/xml"/>
	  		<resource name="template.extract" type="application/application/xslt+xml"/>
	  		<resource-directory name="patch" path="patches" type="*/*"/>
	  		<directory name="mods">
		  		<directory name="Thalion-v1.05-DE">
		  			<resource-directory name="src" type="*/*"/>
		  			<resource-directory name="gfx" type="image/png"/>
		  			<resource-directory name="tmp" type="*/*"/>
		  			<resource name="libs" type="application/xml"/>
		  		</directory>
		  		<directory name="Thalion-v1.06-DE">
		  			<resource-directory name="src" type="*/*"/>
		  			<resource-directory name="gfx" type="image/png"/>
		  			<resource-directory name="tmp" type="*/*"/>
		  			<resource name="libs" type="application/xml"/>
		  		</directory>
		  		<directory name="Thalion-v1.07-DE">
		  			<resource-directory name="src" type="*/*"/>
		  			<resource-directory name="gfx" type="image/png"/>
		  			<resource-directory name="tmp" type="*/*"/>
		  			<resource name="libs" type="application/xml"/>
		  		</directory>
		  	</directory>
	  	</directory>
	</directory>
	
	
	
	<resource-directory name="cli" path="cli" type="application/vnd.microsoft.portable-executable"/>
    <resource-directory name="css" path="stylesheet" type="text/css"/>
    <resource-directory name="js" path="script" type="application/javascript"/>
    <resource-directory name="xsl" path="template" type="application/xslt+xml"/>
    <resource-directory name="dictionary" path="dictionary" type="application/xml"/>
    <resource-directory name="pages" path="pages" type="application/xml"/>
    
    <fragment name="description">
      <import ref="//slothsoft/default"/>
      <fragment name="content">
        <use-template ref="xsl/description"/>
        <use-document ref="//farah/sites"/>
        <import ref="default"/>
      </fragment>
      <use-document ref="chat"/>
    </fragment>
    
    <fragment name="mod.editor">
      <import ref="//slothsoft/default"/>
      <fragment name="content">
        <use-template ref="xsl/editor"/>
        <import ref="default"/>
        <import ref="SavegameEditor"/>
        <use-document ref="editor/main" as="editor"/>
        <use-document ref="editor/resources/libs" as="amberdata"/>
      </fragment>
    </fragment>
    
    
    <fragment name="mod.resource">
      <import ref="//slothsoft@slothsoft/default"/>
      <fragment name="content">
        <use-document as="list" ref="data/mod.resource-document"/>
        <use-document as="amberdata" ref="data/mod.resource-document">
          <param name="id" value="libs"/>
        </use-document>
        <use-template ref="xsl/editor.data-list"/>
        <import ref="default"/>
        <import ref="SavegameEditor"/>
        <import ref="//slothsoft@lib/pixijs"/>
        <use-script ref="js/MapViewer"/>
        <import ref="//slothsoft@lib/babylonjs"/>
        <use-script ref="js/DungeonViewer"/>
      </fragment>
    </fragment>
    <fragment name="chat">
      <param name="chat-database" value="amber"/>
      <use-template ref="//chat/xsl/shoutbox"/>
      <use-document ref="//chat/default" as="chat"/>
    </fragment>
    
    
    <container name="default">
      <use-stylesheet ref="css/default"/>
      <use-stylesheet ref="css/amber-picker"/>
    </container>
    <container name="SavegameEditor">
      <use-script ref="//core/js/XSLT"/>
      <use-script ref="//core/js/NS"/>
      <use-script ref="js/SavegameEditor"/>
    </container>
    
    
    
    
